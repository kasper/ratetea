<h1>Listing tea clubs</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
    </tr>
  </thead>

  <tbody>
    <% @tea_clubs.each do |tea_club| %>
      <tr>
        <td><%= link_to tea_club.name, tea_club %></td>
        <td><%= tea_club.founded %></td>
        <td><%= tea_club.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tea club', new_tea_club_path, :class => 'btn' unless current_user.nil? %>
