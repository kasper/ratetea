<p id="notice"><%= notice %></p>

<h1><%= @user.username %></h1>

<p>
  <% if @user.ratings.empty? %>
    No ratings.
  <% else %>
    <%= pluralize(@user.ratings.size, 'rating') %> with an average of <%= @user.average_rating %>.
  <% end %>
</p>

<ul>
  <% @user.ratings.each do |rating| %>
    <li><%= rating %> <%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
