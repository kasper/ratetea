<table class='table table-hover'>
  <thead>
    <tr>
      <th></th>
      <th>Average</th>
    </tr>
  </thead>

  <tbody>
    <% top.each do |entity| %>
      <tr>
        <td><%= link_to entity.name, entity %></td>
        <td><%= round(entity.average_rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
