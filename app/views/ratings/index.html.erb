<h1>Listing ratings</h1>

<% unless @ratings.empty? %>
  <ul>
    <% @ratings.each do |rating| %>
      <li><%= rating %> by <%= link_to rating.user.username, user_path(rating.user) %></li>
    <% end %>
  </ul>
<% end %>

<% unless current_user.nil? %>
  <%= link_to 'New Rating', new_rating_path %>
<% end %>
